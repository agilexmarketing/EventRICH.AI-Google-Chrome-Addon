{
	"compilerOptions": {
		"types": ["chrome"],
		"lib": ["dom", "dom.iterable", "esnext", "webworker"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"rspack.config.ts",
		"postcss.config.js",
		"utils.ts"
	],
	"exclude": ["node_modules"]
}
